<div class="show-page mb-5">


<div class="carousel mx-auto" style="width: 60%;">

  <div class="carousel__container">
    <% @skills.reverse.each do |skill| %>
      <div class="card" id="carousel-item">
        <%= link_to skill_path(skill) do %>
          <%= cl_image_tag skill.photo.key, class: "card-img-top carousel-item__img" %>
        <% end %>
        <div class="carousel-item__details">
          <h5 class="carousel-item__details--title"><strong> <%= categorize_skill(skill) %></strong></h5>
            <%# <%= skill.title.split.first %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div class="mx-auto" style="width: 70%;">

<div class="container mt-4 mb-5 ">
  <h1><strong>Discover your next passion </strong></h1>
</div>






  <!-- Main Row Wrapper for the Cards -->
<div class="container mt-4">
  <div class="row justify-content-left mx-auto m-2">
    <% @skills.each do |skill| %>
      <!-- Each Skill Card Column (3 columns per row on large screens) -->
    <div class="col-12 col-md-6 col-lg-4 mb-3 d-flex justify-content-left">

        <div class="card h-100">
          <!-- Skill Image -->
          <% if skill.photo.attached? %>
            <%= cl_image_tag skill.photo.key, class: "card-img-top" %>
          <% else %>
            <img src="https://via.placeholder.com/300x200" alt="No image available" class="card-img-top" />
          <% end %>

        <div class="card-content">

          <!-- Skill Information -->
          <div class="card-details">
            <h5 class="card-title mt-5"><%= link_to skill.title, skill_path(skill) %></h5>
            <p class="card-body"><%= skill.description %></p>
          </div>

          <!-- Price in the Footer -->
          <div  class="footer">

          <%= link_to "More details", skill_path(skill), class: "btn btn-primary" %>

            <small>Price: <%= number_to_currency(skill.price, unit: "Â£") %></small>
          </div>

        </div>
      </div>
  </div>
    <% end %>
        </div>
</div>
</div>


